<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.risk.view.MapEditorController"
            prefHeight="400.0" prefWidth="600.0" fx:id="mapEditorBorderPane">

    <top>
        <Label text="Enter the names of the Continents to add along with their control values" VBox.vgrow="ALWAYS"/>
    </top>

    <right>
        <ListView fx:id="continentListView">

        </ListView>
    </right>

    <center>
        <VBox>
            <GridPane vgap="10" hgap="10">
                <Button text="Add Continents" fx:id="addButton" onAction="#handleAddDialog"/>
            </GridPane>
        </VBox>
    </center>

</BorderPane>
